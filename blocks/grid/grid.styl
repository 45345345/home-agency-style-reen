.container
  width 1170px
  padding-right 15px
  padding-left 15px
  margin 0 auto
  &:before
    display: table;
    content: " ";
  &:after
    display: table;
    content: " ";
    clear both

.row
  margin-right -15px
  margin-left -15px
  &:before
    display: table;
    content: " ";
  &:after
    display: table;
    content: " ";
    clear both

grid(amount, prefix)
  for num in (1..amount)
    {prefix}-{num}
      width (100% / amount * num)
      position relative
      min-height 1px
      padding-right 15px
      padding-left 15px
      float left
      box-sizing border-box

grid(12, '.col-md')
