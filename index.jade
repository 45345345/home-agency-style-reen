doctype html
html
  head
    meta(charset='utf-8')
    title Reen
    link(rel= 'stylesheet', href= "base.min.css")
    link(rel= 'stylesheet', href= "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css")

  body

    .top-line
      .container
        .row
          .col-md-12
            .email info@reen.com
            .phone +00 (123) 456 78 90
            .social-buttons

    .top-nav-box
      .container
        .row
          .col-md-2
            a.logotype(href= '/')

          .col-md-8
            ul.main-menu
              - var mainMenu = {}
              - mainMenu.items = []
              - mainMenu.items[0] = {}
                - mainMenu.items[0].value = 'Home'
              - mainMenu.items[1] = {}
                - mainMenu.items[1].value = 'Portfolio'
              - mainMenu.items[2] = {}
                - mainMenu.items[2].value = 'Blog'
              - mainMenu.items[3] = {}
                - mainMenu.items[3].value = 'Pages'
              - mainMenu.items[4] = {}
                - mainMenu.items[4].value = 'Features'
              - mainMenu.items[5] = {}
                - mainMenu.items[5].value = 'Mega menu'
              - mainMenu.items[6] = {}
                - mainMenu.items[6].value = 'Contact'

              each val, index in mainMenu.items
                li.main-menu__item
                  a.link.main-menu__link(href= '/')= val.value

          .col-md-2
            .search

    .main-heading-box
      .container
        .row
          .col-md-12
            h1.main-heading Made for designers
            .description Create your online portfolio in minutes with the professionally and lovingly designed REEN website template. Customize your site with versatile and easy to use features
            button.button.button-primary Get started now

    .container
      .row
        .col-md-12
          p Beautiful. Clean. Responsive. REEN is a high-quality solution for those who want a beautiful website in no time. It's fully responsive and will adapt itself to any mobile device. iPad, iPhone, Android, it doesn't matter. Your content will always looks its absolute best.

    link(href= 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Lato:700,900', rel= 'stylesheet', type= 'text/css')


